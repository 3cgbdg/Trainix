generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GenderType {
  MALE
  FEMALE
}

enum FitnessLevelType {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum PrimaryFitnessGoalType {
  LOSE_WEIGHT
  GAIN_MUSCLE
  STAY_FIT
  IMPROVE_ENDURANCE
}

enum DayStatusType {
  PENDING
  COMPLETED
  MISSED
}

enum ExerciseStatusType {
  COMPLETED
  PENDING
}

enum NotificationTopicType {
  WATER
  SPORT
  NUTRITION
  MEASUREMENT
}

enum MealStatusType {
  EATEN
  PENDING
}

enum FoodIntakeType {
  SNACK
  LUNCH
  BREAKFAST
  DINNER
}

model User {
  id                 String                  @id @default(uuid())
  firstName          String
  lastName           String
  password           String
  email              String                  @unique
  inAppNotifications Boolean                 @default(true)
  dateOfBirth        DateTime
  gender             GenderType
  longestStreak      Int                     @default(0)
  metrics            Metrics?                @relation("user_metrics")
  targetWeight       Int?
  fitnessPlan        FitnessPlan?            @relation("user_fitness_plan")
  nutritionPlan      NutritionPlan?          @relation("user_nutrition_plan")
  fitnessLevel       FitnessLevelType?
  primaryFitnessGoal PrimaryFitnessGoalType?
  notifications      Notification[]          @relation("user_notifications")
  measurements       Measurement[]           @relation("user_measurements")
}

model Metrics {
  id                     String        @id @default(uuid())
  userId                 String        @unique
  height                 Int
  weight                 Int
  shoulderToWaistRatio   Decimal       @db.Decimal(4, 2)
  waistToHipRatio        Decimal       @db.Decimal(4, 2)
  percentOfLegsLength    Decimal       @db.Decimal(4, 2)
  shoulderAsymmetricLine Int
  shoulderAngle          Int
  user                   User          @relation("user_metrics", fields: [userId], references: [id], onDelete: Cascade)
  measurements           Measurement[] @relation("measurements_metrics")
}

model Notification {
  id        String                @id @default(uuid())
  topic     NotificationTopicType
  info      String
  createdAt DateTime              @default(now())
  expiresAt DateTime?

  userId String
  user   User   @relation("user_notifications", fields: [userId], references: [id], onDelete: Cascade)
}

model Measurement {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  imageUrl  String
  metrics   Metrics  @relation("measurements_metrics", fields: [metricsId], references: [id], onDelete: Cascade)
  metricsId String
  user      User     @relation("user_measurements", fields: [userId], references: [id], onDelete: Cascade)
  userId    String
}

///// Fitness plan block

model FitnessPlan {
  id            String              @id @default(uuid())
  user          User                @relation("user_fitness_plan", fields: [userId], references: [id], onDelete: Cascade)
  userId        String              @unique
  streak        Int                 @default(0)
  briefAnalysis BriefAnalysis?      @relation("fitness_plan_brief_analysis")
  advice        Advice?             @relation("fitness_plan_advice")
  content       FitnessPlanContent? @relation("fitness_plan_content")
  createdAt     DateTime            @default(now())
}

model BriefAnalysis {
  id                 String                 @id @default(uuid())
  targetWeight       Int
  fitnessLevel       FitnessLevelType
  primaryFitnessGoal PrimaryFitnessGoalType
  fitnessPlan        FitnessPlan            @relation("fitness_plan_brief_analysis", fields: [fitnessPlanId], references: [id], onDelete: Cascade)
  fitnessPlanId      String                 @unique
}

model Advice {
  id            String      @id @default(uuid())
  nutrition     String
  hydration     String
  recovery      String
  progress      String
  fitnessPlan   FitnessPlan @relation("fitness_plan_advice", fields: [fitnessPlanId], references: [id], onDelete: Cascade)
  fitnessPlanId String      @unique
}

model FitnessPlanContent {
  id            String       @id @default(uuid())
  week1Title    String
  week2Title    String
  week3Title    String
  week4Title    String
  days          FitnessDay[] @relation("fitness_plan_content_days")
  fitnessPlan   FitnessPlan  @relation("fitness_plan_content", fields: [fitnessPlanId], references: [id], onDelete: Cascade)
  fitnessPlanId String       @unique
}

model FitnessDay {
  id                   String             @id @default(uuid())
  dayNumber            Int
  dayTitle             String
  exercises            Exercise[]         @relation("day_exercises")
  status               DayStatusType
  calories             Int
  date                 DateTime
  fitnessPlanContent   FitnessPlanContent @relation("fitness_plan_content_days", fields: [fitnessPlanContentId], references: [id], onDelete: Cascade)
  fitnessPlanContentId String
}

model ExerciseImage {
  id        String     @id @default(uuid())
  name      String     @unique
  url       String
  exercises Exercise[] @relation("exercise_image")
}

model Exercise {
  id          String             @id @default(uuid())
  title       String
  repeats     Int?
  time        Int?
  instruction String
  advices     String
  calories    Int
  status      ExerciseStatusType

  exerciseImage   ExerciseImage @relation("exercise_image", fields: [exerciseImageId], references: [id])
  exerciseImageId String
  day             FitnessDay    @relation("day_exercises", fields: [dayId], references: [id], onDelete: Cascade)
  dayId           String
}

/////

///// Nutrition plan block

model MealImage {
  id    String @id @default(uuid())
  name  String @unique
  url   String
  meals Meal[] @relation("meal_image")
}

model NutritionPlan {
  id        String         @id @default(uuid())
  user      User           @relation("user_nutrition_plan", fields: [userId], references: [id], onDelete: Cascade)
  userId    String         @unique
  createdAt DateTime
  days      NutritionDay[] @relation("nutrition_days")
}

model NutritionDay {
  id              String        @id @default(uuid())
  date            DateTime
  dayNumber       Int           @db.SmallInt
  meals           Meal[]        @relation("day_meals")
  waterCurrent    Int           @db.SmallInt
  waterTarget     Int           @db.SmallInt
  dailyGoals      DailyGoals?   @relation("day_goals")
  waterIntake     WaterIntake?  @relation("day_water_intake")
  nutritionPlan   NutritionPlan @relation("nutrition_days", fields: [nutritionPlanId], references: [id])
  nutritionPlanId String
  @@unique([nutritionPlanId, dayNumber])
}

model DailyGoals {
  id              String       @id @default(uuid())
  caloriesCurrent Int
  caloriesTarget  Int
  proteinCurrent  Int
  proteinTarget   Int
  carbsCurrent    Int
  carbsTarget     Int
  fatsCurrent     Int
  fatsTarget      Int
  day             NutritionDay @relation("day_goals", fields: [dayId], references: [id], onDelete: Cascade)
  dayId           String       @unique
}

model WaterIntake {
  id      String       @id @default(uuid())
  current Int          @db.SmallInt
  target  Int          @db.SmallInt
  day     NutritionDay @relation("day_water_intake", fields: [dayId], references: [id], onDelete: Cascade)
  dayId   String       @unique
}

model Meal {
  id             String         @id @default(uuid())
  title          String
  cookingTime    String
  description    String
  ingredients    Ingredient[]   @relation("meals_ingredients")
  preparation    String
  mealCalories   Int            @db.SmallInt
  mealProtein    Int            @db.SmallInt
  mealCarbs      Int            @db.SmallInt
  mealFats       Int            @db.SmallInt
  status         MealStatusType
  foodIntake     FoodIntakeType
  nutritionDay   NutritionDay   @relation("day_meals", fields: [nutritionDayId], references: [id])
  nutritionDayId String
  mealImage      MealImage      @relation("meal_image", fields: [mealImageId], references: [id])
  mealImageId    String
}

model Ingredient {
  id    String @id @default(uuid())
  name  String
  meals Meal[] @relation("meals_ingredients")
}

